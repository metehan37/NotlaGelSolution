@using NotlaGel.WebApp.ViewModals
@model OkViewModal

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/Login-Register.css" rel="stylesheet" />

<h2>RegisterOk</h2>

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header</h1>
            </div>
            <div class="main-content">
                <div class="text-success">
                    <h2><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (string msg in Model.Items)
                        {
                            @msg<Br>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
@{ 
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location='"+Model.RedirectingUrl +"'},"+Model.RedirectingTimeout+");";
    }
}
<script>

    $(function () {
        @Html.Raw(js);
    })

</script>

